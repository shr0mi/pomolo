<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="540.0" prefWidth="960.0" userData="playerPage" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PlayerPageController">
    <children>
        <Rectangle arcHeight="5.0" arcWidth="5.0" height="552.0" layoutX="-9.0" layoutY="-10.0" opacity="0.6" stroke="BLACK" strokeType="INSIDE" width="978.0" />

        <Button layoutX="27.0" layoutY="27.0" mnemonicParsing="false" onAction="#goToHome" text="&lt; Back" />
        <VBox alignment="CENTER" layoutX="230.0" layoutY="135.0" prefHeight="270.0" prefWidth="500.0" spacing="20.0">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="NOW PLAYING">
                    <font>
                        <Font name="Monospaced Regular" size="24.0" />
                    </font>
                </Text>
                <Text fx:id="currentSongText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="No Song Selected">
                    <font>
                        <Font name="Monospaced Regular" size="16.0" />
                    </font>
                </Text>
                <HBox alignment="CENTER" prefHeight="26.0" prefWidth="500.0" spacing="10.0">
                    <children>
                        <Text fx:id="currentTimeText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="00:00">
                            <font>
                                <Font name="Monospaced Regular" size="12.0" />
                            </font>
                        </Text>
                        <Slider fx:id="progressSlider" prefHeight="14.0" prefWidth="380.0" />
                        <Text fx:id="totalTimeText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="00:00">
                            <font>
                                <Font name="Monospaced Regular" size="12.0" />
                            </font>
                        </Text>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="31.0" prefWidth="500.0" spacing="30.0">
                    <children>
                        <Button fx:id="prevButton" mnemonicParsing="false" onAction="#handlePrevious" text="Prev" />
                        <Button fx:id="playPauseButton" mnemonicParsing="false" onAction="#handlePlayPause" prefHeight="26.0" prefWidth="65.0" text="Play" />
                        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNext" text="Next" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="14.0" prefWidth="500.0" spacing="10.0">
                    <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Vol:">
                            <font>
                                <Font name="Monospaced Regular" size="12.0" />
                            </font>
                        </Text>
                        <Slider fx:id="volumeSlider" max="1.0" prefWidth="150.0" value="0.8" />
                    </children>
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>