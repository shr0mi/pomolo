<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane fx:id="rootPane" prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PomodoroController">
    <stylesheets>
        <URL value="@home.css" />
    </stylesheets>

    <HBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="POMODORO" textAlignment="CENTER">
            <font>
                <Font name="Monospaced Regular" size="25.0" />
            </font>
        </Text>
    </HBox>

    <Button layoutX="880.0" layoutY="30.0" mnemonicParsing="false" onAction="#goToHome" text="X" styleClass="close-btn"/>

    <HBox alignment="CENTER" layoutX="27.0" layoutY="88.0" prefHeight="400.0" prefWidth="906.0" spacing="100.0" style="-fx-background-color: transparent;">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>
        <VBox alignment="TOP_CENTER" prefWidth="400" spacing="20.0" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER" spacing="40.0">
                <VBox alignment="CENTER" spacing="50.0">
                    <Button fx:id="playButton" onAction="#handlePlay" prefHeight="50.0" prefWidth="50.0" style="-fx-font-size: 20pt; -fx-font-family: monospace;" styleClass="icon-btn">
                        <graphic>
                            <FontIcon iconLiteral="fas-play" iconSize="22" styleClass="iconli-font-icon"/>
                        </graphic>
                    </Button>
                    <Button fx:id="pauseButton" onAction="#handlePause" prefHeight="50.0" prefWidth="50.0" style="-fx-font-size: 20pt; -fx-font-family: monospace;" styleClass="icon-btn">
                        <graphic>
                            <FontIcon iconLiteral="fas-pause" iconSize="22" styleClass="iconli-font-icon"/>
                        </graphic>
                    </Button>
                    <Button fx:id="stopButton" onAction="#handleStop" prefHeight="50.0" prefWidth="50.0" style="-fx-font-size: 15pt; -fx-font-family: monospace;" styleClass="icon-btn">
                        <graphic>
                            <FontIcon iconLiteral="fas-stop" iconSize="22" styleClass="iconli-font-icon"/>
                        </graphic>
                    </Button>
                </VBox>

                <VBox alignment="CENTER" spacing="5">
                    <StackPane fx:id="timerContainer" alignment="CENTER" maxHeight="350" maxWidth="350">
                        <StackPane fx:id="ringVisualsStack" alignment="CENTER">
                            <Circle fill="transparent" radius="110.0" stroke="#FFFFFF66" strokeWidth="4.0" />
                            <Circle fx:id="timerProgressRing" fill="transparent" radius="110.0" stroke="#FFFFFF" strokeLineCap="ROUND" strokeWidth="10.0" />
                        </StackPane>
                        <Label fx:id="timerLabel" alignment="CENTER" prefWidth="200.0" style="-fx-font-size: 25pt; -fx-text-fill: #FFFFFF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5,0,0,0); -fx-font-family: monospace; -fx-fond-weight: bold;" text="00:25:00">
                            <font>
                                <Font name="Inter" size="55.0" />
                            </font>
                        </Label>
                        <HBox fx:id="decreaseButtonHBox" alignment="CENTER" spacing="40.0" StackPane.alignment="CENTER">
                            <StackPane.margin>
                                <Insets top="200.0" />
                            </StackPane.margin>
                            <Button fx:id="decreaseHourButton" onAction="#handleTimeAdjustment" prefHeight="50.0" prefWidth="50.0" styleClass="icon-btn">
                                <graphic>
                                    <FontIcon iconLiteral="fas-minus" iconSize="22" styleClass="iconli-font-icon"/>
                                </graphic>
                            </Button>
                            <Button fx:id="decreaseMinuteButton" onAction="#handleTimeAdjustment" prefHeight="50.0" prefWidth="50.0" styleClass="icon-btn">
                                <graphic>
                                    <FontIcon iconLiteral="fas-minus" iconSize="22" styleClass="iconli-font-icon"/>
                                </graphic>
                            </Button>
                            <Button fx:id="decreaseSecondButton" onAction="#handleTimeAdjustment" prefHeight="50.0" prefWidth="50.0" styleClass="icon-btn">
                                <graphic>
                                    <FontIcon iconLiteral="fas-minus" iconSize="22" styleClass="iconli-font-icon"/>
                                </graphic>
                            </Button>
                        </HBox>

                        <HBox fx:id="increaseButtonHBox" alignment="CENTER" spacing="40.0" StackPane.alignment="TOP_CENTER">
                            <StackPane.margin>
                                <Insets bottom="200.0" />
                            </StackPane.margin>
                            <Button fx:id="increaseHourButton" onAction="#handleTimeAdjustment" prefHeight="50.0" prefWidth="50.0" styleClass="icon-btn">
                            <graphic>
                                <FontIcon iconLiteral="fas-plus" iconSize="22" styleClass="iconli-font-icon"/>
                            </graphic>
                            </Button>
                            <Button fx:id="increaseMinuteButton" onAction="#handleTimeAdjustment" prefHeight="50.0" prefWidth="50.0" styleClass="icon-btn">
                                <graphic>
                                    <FontIcon iconLiteral="fas-plus" iconSize="22" styleClass="iconli-font-icon"/>
                                </graphic>
                            </Button>
                            <Button fx:id="increaseSecondButton" onAction="#handleTimeAdjustment" prefHeight="50.0" prefWidth="50.0" styleClass="icon-btn">
                                <graphic>
                                    <FontIcon iconLiteral="fas-plus" iconSize="22" styleClass="iconli-font-icon"/>
                                </graphic>
                            </Button>
                        </HBox>
                    </StackPane>
                </VBox>
            </HBox>
        </VBox>
        <!--Stats Column -->
        <VBox alignment="TOP_LEFT" prefWidth="400" spacing="10" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <Label fx:id="statsLabel" alignment="CENTER_LEFT" style="-fx-font-family: monospace; -fx-font-size: 14pt; -fx-text-fill: #E0E0E0;" text="Loading statistics..." />
        </VBox>
    </HBox>
</AnchorPane>
