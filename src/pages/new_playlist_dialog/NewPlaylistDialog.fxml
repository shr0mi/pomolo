<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pages.new_playlist_dialog.NewPlaylistDialogController" styleClass="root" stylesheets="@/css/dark-theme.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Enter Playlist Name" styleClass="label"/>
        <TextField fx:id="playlistNameField" styleClass="text-field"/>
        <Button text="Create" onAction="#createPlaylist" styleClass="button"/>
    </children>
</VBox>
