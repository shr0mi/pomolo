<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane fx:id="rootPane" prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pages.all_songs.AllSongsPageController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="35.0" AnchorPane.topAnchor="30.0">
            <children>
                <Button mnemonicParsing="false" onAction="#addSelectedSongs" styleClass="icon-btn, add-playlist-btn">
                    <graphic>
                        <FontIcon iconLiteral="fas-plus" iconSize="16" styleClass="iconli-font-icon"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Add selected to playlist" />
                    </tooltip>
                </Button>
                <HBox HBox.hgrow="ALWAYS" />
                <Button onAction="#goBack" text="Back" styleClass="close-btn" />
            </children>
        </HBox>

        <HBox alignment="CENTER" AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="35.0" AnchorPane.topAnchor="80.0">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="ADD SONGS FROM LIBRARY" textAlignment="CENTER">
                    <font>
                        <Font name="Monospaced Regular" size="25.0" />
                    </font>
                </Text>
            </children>
        </HBox>

        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="35.0" AnchorPane.topAnchor="120.0">
            <content>
                <VBox fx:id="vbox">
                    <padding>
                        <Insets bottom="60.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
