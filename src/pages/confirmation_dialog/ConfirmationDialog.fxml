<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" styleClass="root" stylesheets="@../../css/dark-theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pages.confirmation_dialog.ConfirmationDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="messageLabel" text="Are you sure?" styleClass="label" wrapText="true" />
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button onAction="#handleYes" prefWidth="80.0" styleClass="button" text="Yes" />
                <Button onAction="#handleNo" prefWidth="80.0" styleClass="button" text="No" />
            </children>
        </HBox>
    </children>
</VBox>
