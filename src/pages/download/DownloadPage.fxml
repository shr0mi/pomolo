<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pages.download.DownloadPageController">

    <HBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Downloads" textAlignment="CENTER">
            <font>
                <Font name="Monospaced Regular" size="25.0" />
            </font>
        </Text>
    </HBox>

    <Button mnemonicParsing="false" onAction="#goToHome" styleClass="close-btn" text="X" AnchorPane.rightAnchor="35.0" AnchorPane.topAnchor="30.0" />

    <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="27.0" AnchorPane.rightAnchor="27.0" AnchorPane.topAnchor="88.0">
    <content>
    <VBox spacing="10.0">
               <children>
                  <VBox fx:id="topBar1" alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0" style="-fx-background-color: transparent; -fx-padding: 15; -fx-border-color: grey; -fx-border-width: 0.5;" stylesheets="@../../css/home.css">
                      <children>
                          <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="The downloader requires two external tools: yt-dlp and ffmpeg. Please download them for your operating system." textAlignment="CENTER" wrappingWidth="525.0">
                              <font>
                                  <Font name="Monospaced Regular" size="13.0" />
                              </font>
                          </Text>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                                  <VBox alignment="CENTER" spacing="5.0">
                                      <children>
                                          <Text fill="WHITE" text="yt-dlp">
                                 <font>
                                    <Font name="Monospaced Bold" size="14.0" />
                                 </font></Text>
                                          <Hyperlink onAction="#openLink" text="Windows" textFill="WHITE" userData="https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp.exe" />
                                          <Hyperlink onAction="#openLink" text="macOS" textFill="WHITE" userData="https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp_macos" />
                                          <Hyperlink onAction="#openLink" text="Linux" textFill="WHITE" userData="https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp" />
                                      </children>
                                  </VBox>
                                  <VBox alignment="CENTER" spacing="5.0">
                                      <children>
                                          <Text fill="WHITE" text="ffmpeg">
                                 <font>
                                    <Font name="Monospaced Bold" size="14.0" />
                                 </font></Text>
                                          <Hyperlink onAction="#openLink" text="Windows" textFill="WHITE" userData="https://www.gyan.dev/ffmpeg/builds/" />
                                          <Hyperlink onAction="#openLink" text="macOS" textFill="WHITE" userData="https://evermeet.cx/ffmpeg/" />
                                          <Hyperlink onAction="#openLink" text="Linux" textFill="WHITE" userData="https://johnvansickle.com/ffmpeg/" />
                                      </children>
                                  </VBox>
                     </children>
                  </HBox>
                      </children>
                  </VBox>
        <HBox fx:id="topBar2" alignment="CENTER_LEFT" style="-fx-background-color: transparent; -fx-padding: 15; -fx-border-color: grey; -fx-border-width: 0.5;" stylesheets="@../../css/home.css">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
            <children>
                  <VBox spacing="5.0">
                     <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Alternative: Terminal Commands">
                           <font>
                              <Font name="Monospaced Bold" size="13.0" />
                           </font>
                        </Text>
                        <HBox spacing="10.0">
                           <children>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="macOS:">
                                 <font>
                                    <Font name="Monospaced Regular" size="12.0" />
                                 </font>
                              </Text>
                              <TextField editable="false" prefWidth="400.0" style="-fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-border-color: #555555; -fx-border-width: 1; -fx-padding: 3; -fx-font-family: 'Monospaced Regular'; -fx-font-size: 12px;" text="brew install yt-dlp &amp;&amp; brew install ffmpeg" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Linux:">
                                 <font>
                                    <Font name="Monospaced Regular" size="12.0" />
                                 </font>
                              </Text>
                              <TextField editable="false" prefWidth="400.0" style="-fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-border-color: #555555; -fx-border-width: 1; -fx-padding: 3; -fx-font-family: 'Monospaced Regular'; -fx-font-size: 12px;" text="sudo apt install yt-dlp ffmpeg (or equivalent)" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
            </children></HBox>
        <HBox fx:id="topBar21" alignment="CENTER_LEFT" prefHeight="50.0" styleClass="row-box" stylesheets="@../../css/home.css">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Link:" textAlignment="CENTER">
                    <font>
                        <Font name="Monospaced Regular" size="13.0" />
                    </font>
                </Text>
                <TextField fx:id="linkInput" prefWidth="400" promptText="Paste YouTube URL here" styleClass="download-input">
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin></TextField>
                     <Button mnemonicParsing="false" text="Download" onAction="#download">
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin>
                     </Button>
            </children>
        </HBox>
      <HBox fx:id="topBar22" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" styleClass="row-box" stylesheets="@../../css/home.css">
                  <children>
                      <VBox spacing="10.0"
                            HBox.hgrow="ALWAYS">
                          <children>
                              <Text fill="WHITE"
                                    text="Terminal"
                                    textAlignment="CENTER">
                                  <font>
                                      <Font name="Monospaced Regular" size="13.0" />
                                  </font>
                              </Text>

                              <!-- Terminal Output Area -->
                              <TextArea fx:id="terminalOutput"
                                        editable="false"
                                        prefHeight="200"
                                        VBox.vgrow="ALWAYS">

                              </TextArea>

                          </children>
                      </VBox>
                  </children>
               </HBox>
    </children>
    </VBox>
    </content>
    </ScrollPane>

</AnchorPane>
