<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.effect.DropShadow?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="miniPlayerController"
           fx:id="root"
           prefWidth="300" prefHeight="300"
           style="-fx-background-color: rgba(43,43,43,0.55); -fx-background-radius: 180;">

    <children>
        <!-- === Glow Ring === -->
        <Circle fx:id="glowRing"
                radius="135"
                stroke="white"
                strokeWidth="3"
                fill="transparent">
            <effect>
                <DropShadow radius="25" color="white" spread="0.3"/>
            </effect>
        </Circle>

        <!-- === Music Design (shown when not hovered) === -->
        <StackPane fx:id="musicDesign" alignment="CENTER">
            <Circle fx:id="visualCircle"
                    radius="100"
                    fill="#4CAF50"
                    opacity="0.15" />
        </StackPane>

        <!-- === Main UI (shown when hovered) === -->
        <StackPane fx:id="uiContainer" alignment="CENTER">
            <VBox alignment="CENTER" spacing="18">
                <Label text="ðŸŽµ" style="-fx-font-size: 42px;" />

                <Label fx:id="songLabel"
                       text="Now Playing"
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />

                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="prevButton"
                            text="â®"
                            onAction="#previous"
                            style="-fx-font-size: 18px; -fx-background-color: #444; -fx-text-fill: white; -fx-background-radius: 50%; -fx-pref-width: 40; -fx-pref-height: 40;" />

                    <Button fx:id="playPauseButton"
                            text="â–¶"
                            onAction="#playPause"
                            style="-fx-font-size: 22px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 50%; -fx-pref-width: 50; -fx-pref-height: 50;" />

                    <Button fx:id="nextButton"
                            text="â­"
                            onAction="#next"
                            style="-fx-font-size: 18px; -fx-background-color: #444; -fx-text-fill: white; -fx-background-radius: 50%; -fx-pref-width: 40; -fx-pref-height: 40;" />
                </HBox>

                <Button text="â¤´ Restore"
                        onAction="#restoreMain"
                        style="-fx-background-color: transparent; -fx-text-fill: lightgray; -fx-font-size: 13px; -fx-underline: true;" />
            </VBox>
        </StackPane>
    </children>
</StackPane>
